{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "rootDir": "./api",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.js",
    "src/cors.js",
    "api/index.js"
  ],
  "exclude": [
    "node_modules"
  ]
}